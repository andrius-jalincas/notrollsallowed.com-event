{% extends "EstinaHomeBundle::page.html.twig" %}

{% block content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData) }}</div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post">

        {{ form_row(loginForm._username, { 'label': 'El.paštas' }) }}
        {{ form_row(loginForm._password, { 'label': 'Slaptažodis' }) }}
        {{ form_rest(loginForm) }}

        <button type="submit">Prisijungti</button>

        <a  href="{{ path('user_password_reset') }}">Priminti slažtažodį</a>
    </form>
{% endblock %}
