{% extends "EstinaHomeBundle::page.html.twig" %}

{% block content %}
    <h1>Login</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData) }}</div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post">

        {{ form_row(loginForm._username, { 'label': 'E-mail' }) }}
        {{ form_row(loginForm._password, { 'label': 'Password' }) }}
        {{ form_rest(loginForm) }}

        <div>
            <button type="submit" class="btn btn-info">Login</button>
            <small><a href="{{ path('user_password_reset') }}">Remind password</a></small>
        </div>

    </form>
{% endblock %}
