{% extends "EstinaHomeBundle::page.html.twig" %}

{% block content %}
    <h1>{{ 'user.header.main'|trans }}</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData) }}</div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post">

        {{ form_row(loginForm._username) }}
        {{ form_row(loginForm._password) }}
        {{ form_rest(loginForm) }}

        <div>
            <button type="submit" class="btn btn-info">{{ 'user.button.login'|trans }}</button>
            <small><a href="{{ path('user_password_reset') }}">{{ 'user.link.forgot_password'|trans }}</a></small>
        </div>

    </form>
{% endblock %}
