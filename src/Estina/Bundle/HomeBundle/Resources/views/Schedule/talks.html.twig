{% extends "EstinaHomeBundle::page-wide.html.twig" %}

{% macro track_class(index) -%}
    {%- if index == 0 -%}
        first
    {%- elseif index == 1 -%}
        second
    {%- elseif index == 2 -%}
        third
    {%- elseif index == 3 -%}
        fourth
    {%- endif %}
{%- endmacro %}

{% import _self as macros %}

{% block content %}
    <h1>Presentations</h1>

    <div class="row schedule">
        {% if tracks|length == 0 %}
            <p>There are no confirmed presentations yet.</p>
        {% endif %}
        {% for index, track in tracks  %}
            <div class="col-md-4 track {{ macros.track_class(index) }}">
                <h2>{{ track.title }}</h2>
            
                {% set count = 0 %}
                {% for talk in track.talks|reverse %}
                    {% if talk.status == 'accepted' %}
                        {% set count = count+1 %}
                        <div class="talk">
                            <a href="{{ path('talk', {'id': talk.id}) }}">
                                <img src="{{ talk.user.email | gravatar }}" alt="{{ talk.user.name }}" class="media-object img-rounded">
                            </a>
                            <h4>
                                <a href="{{ path('talk', {'id': talk.id}) }}" title="{{ talk.title }}">
                                    {{ talk.title }} [{{ talk.language }}]
                                </a>
                            </h4>
                            <p><strong>
                                {% if talk.organizer %}
                                {{ talk.organizer }} 
                                {% else %}
                                {{ talk.user.name }}
                                {% endif %}
                            </strong></p>
                        </div>
                    {% endif %}
                {% endfor %}
                {% if count == 0 %}
                    <p>There are no confirmed presentations yet.</p>
                {% endif %}
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}
