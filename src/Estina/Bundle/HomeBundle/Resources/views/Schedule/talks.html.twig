{% extends "EstinaHomeBundle::layout.html.twig" %}

{% block body %}
    <div class="schedule">
        <div class="container">
            <h2>Prane≈°imai</h2>
            <div class="row">
                {% for track in tracks  %}
                <div class="col-md-3 track">
                    <h2>{{ track.title }}</h2>
                    {% if track.talks %}
                        {% for talk in track.talks %}
                            <div class="events">
                                <img src="{{ talk.user.email | gravatar }}" class="avatar">
                                <div class="events-body">
                                    <h4>{{ talk.user.name }}</h4>
                                    <p>{{ talk.title }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
