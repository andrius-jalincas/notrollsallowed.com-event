<span class="badge badge-primary">Scena: {{ talk.track }}</span>
{% if (is_granted("ROLE_USER") and app.user.id == talk.user.id) or is_granted("ROLE_ADMIN") %}
    <span class="badge badge-{{ talk|talk_status_color }}">Statusas: {{ talk|talk_status }}</span>
    {% if is_granted("ROLE_ADMIN") and not talk.isAccepted %}
        <a href="{{ path('talk_accept', {'id': talk.id}) }}" class="badge badge">Patvirtinti</a>
    {% endif %}
{% endif %}
