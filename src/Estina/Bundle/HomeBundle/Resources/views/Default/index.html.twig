    <div id="about" class="event-details about">
        <div class="container">
            <div class="row">
                <div class="col-md-6 hidden-xs wrapper">
                    <div class="visual"></div>
                </div>
                <div class="col-md-6 wrapper">

                    <h2 class="text-center">{{ 'homepage.text.about_title'|trans }}</h2>

                    <p>{{ 'homepage.text.about_p1'|trans}}</p>
                    
                    <p>{{ 'homepage.text.about_p2'|trans}}</p>
                    <p class="cta-container"><a href="{{ path('talk_register') }}" class="btn btn-primary btn-register"> {{ 'homepage.button.register'|trans }}</a></p>
                    {% if "now"|date("Y-m-d") > registration_deadline %}
                        <p class="cta-container"><strong>{{'homepage.text.registration_ended'|trans}}</strong></p>
                    {% elseif "now"|date('Y-m-d') < registration_start %}
                        <p class="cta-container"><strong>{{ 'homepage.text.registration_not_open'|trans}}</strong></p>
                    {% else %}
                        <p class="cta-container"><a href="{{ path('talk_register') }}" class="btn btn-primary btn-register"> {{ 'homepage.button.register'|trans }}</a></p>
                    {% endif %}

                </div> 
            </div>
        </div>
    </div>

    <div class="hackercamp">
