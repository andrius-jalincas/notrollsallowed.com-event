                            <li>{{ 'homepage.text.footer.distance_from2'|trans }}</li>
                            <li>{{ 'homepage.text.footer.distance_from3'|trans }}</li>
                            <li>{{ 'homepage.text.footer.coordinates'|trans }}</li>
                        </ul>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="gallery">    
